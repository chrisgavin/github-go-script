		"@actions/exec": "^1.1.1",
		"source-map-support": "^0.5.21"
	},
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/source-map-support": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^8.13.0",
		"eslint": "^8.56.0",
		"jest": "^26.6.3",
		"ts-jest": "^26.5.6",
		"ts-node": "^10.9.2",
		"typescript": "^4.9.5"
	}
}
